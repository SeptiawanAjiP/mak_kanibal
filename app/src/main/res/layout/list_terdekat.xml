<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_ket_terdekat">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_foto_terdekat"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:src="@drawable/img_resto1_1"
                android:id="@+id/foto_terdekat" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_foto_terdekat"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/rl_jarak_terdekat">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.2"
                android:textSize="13dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/jarak_terdekat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                android:layout_below="@id/jarak_terdekat"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_jarak_terdekat"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waroenk Kentir"
                android:textColor="@color/textHitam"
                android:id="@+id/nama_tempat_makan_terdekat"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jl. Raya Baturaden no 10"
                android:textSize="10dp"
                android:singleLine="true"
                android:id="@+id/alamat_tempat_makan_terdekat"
                android:layout_below="@id/nama_tempat_makan_terdekat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khas Indonesia"
                android:textSize="10dp"
                android:textColor="@color/textAbu"
                android:layout_below="@id/alamat_tempat_makan_terdekat"
                android:id="@+id/kategori_tempat_makan_terdekat"
                android:layout_marginTop="2dp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textAbu"
        android:layout_below="@id/rl_ket_terdekat"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

</RelativeLayout>